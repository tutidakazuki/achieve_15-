<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
      <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>
        <% @users.each do |users| %>
          <h3><p><%= users.id %>:<%= users.name %></p></h3>
        <% end %>
      <% @blogs.each do |blog| %>
        <div class="row">
          <%= profile_img(@users) if profile_img(@users) %>
          <%= link_to blog_path(blog) do %>
          <h4><strong><%= blog.title %></strong></h4>
          <p><%= blog.content %></p>
          <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
          <%= link_to '削除', blog_path(blog), method: :delete, data: {confirm: '本当に削除していいですか？', class: 'btn btn-default btn-sm btn btn-danger' } %>
        </div>
      <% end %>
  </div>
</div>
<div id="blogs_page-top-btn" class="blogs_page-top-btn">
  <p><a class="move-blogs_page-top" id="move-blogs_page-top">▲</a></p>
</div>